[MASTER]
init-hook='import sys; sys.path.append(".")'

# Load Pylint plugins
load-plugins=pylint_django
django-settings-module=core.settings

max-line-length=88
ignore=CVS,.git,__pycache__,migrations,settings.py,manage.py,venv

[MESSAGES CONTROL]
# Disable some Pylint warnings and errors to reduce noise.
disable=
    missing-docstring,
    invalid-name,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    too-many-instance-attributes,
    too-many-branches,
    too-many-statements,
    duplicate-code

[FORMAT]
# Maximum number of characters on a single line.
max-line-length=88

# String used as indentation unit.
indent-string='    '

[BASIC]
# Good variable names which should always be accepted, separated by a comma.
good-names=i,j,k,e,x,y,z

# Argument names that match this expression will be considered valid.
argument-rgx=[a-z_][a-z0-9_]{0,30}$

# Variable names that match this expression will be considered valid.
variable-rgx=[a-z_][a-z0-9_]{0,30}$

# Function names that match this expression will be considered valid.
function-rgx=[a-z_][a-z0-9_]{0,30}$

# Module names that match this expression will be considered valid.
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-z0-9]*)+)$

# Constant names that match this expression will be considered valid.
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

# Class names that match this expression will be considered valid.
class-rgx=[A-Z_][a-zA-Z0-9]+$

# Method names that match this expression will be considered valid.
method-rgx=[a-z_][a-z0-9_]{2,30}$

[TYPECHECK]
# List of module names for which member attributes should not be checked (useful for
# modules/projects where namespaces are manipulated during runtime and thus cannot be
# detected statically).
ignored-modules=

# List of classes names for which member attributes should not be checked (useful for
# classes with attributes dynamically set).
ignored-classes=

[DESIGN]
# Maximum number of arguments for function / method.
max-args=10

# Maximum number of attributes for a class (see R0902).
max-attributes=10

[REPORTS]
# Set the output format. Available formats are text, parseable, colorized, msvs (visual studio) and html
output-format=colorized